@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">{{ title }}</h1>
</div>

<div class="text-center mt-3">
    <h3 class="display-4">{{ randomNumber }}</h3>
    <div class="mt-3"><button class="btn btn-primary" ng-click="startGame()">Lancer le Jeu</button></div>
</div>

<div class="text-center mt-3 list-group">
    <table class="table">
        <tr>
            <td ng-repeat="chiffre in randomSeven track by $index">{{ chiffre }}</td>
        </tr>
    </table>
</div>


