@{
    ViewData["Title"] = "Home Page";
}
<style>
    .bordered-box {
        border: 1px solid #ddd;
        padding: 20px;
        width: 300px; /* Adjust the width as needed */
        position: absolute;
    }
    
    .launcher {
        float: left;
        margin: auto;
        position: absolute;
    }
    .quit {
        position: absolute;
        margin-left: 10%;
    }
    .jeu {
        margin-top:15%;
    }
    .nombre {
        color: #173369;
    }
    .time {
        margin-left: 90%;
    }
</style>

<div class="text-center">
    <h1 class="display-4">{{ title }}</h1>
</div>
<div class="col mt-5">
    <div class="mt-3 launcher"><button class="btn btn-success" ng-click="startGame()">Lancer le Jeu</button></div>
    <div class="mt-3 quit"><button class="btn btn-outline-danger" ng-click="endGame()">Quitter le Jeu</button></div>
</div>
<div class="mt-5 text-center time">
    <h5 class="titleTemps">Time : </h5><h1 class="temps" >{{ timer }}</h1>
</div>
<div class="container jeu" ng-if="randomNumber != -1">
    <div class="mt-3 text-center">
        <h5>Nombre a predir : </h5><h3 class="display-4"><span class="modal-title nombre">{{ randomNumber }}</span></h3>
    </div>

    <div class="text-center mt-5 list-group">
        <table class="table">
            <tr>
                <td ng-repeat="chiffre in randomSeven track by $index"><h5>{{ chiffre }}</h5></td>
            </tr>
        </table>
    </div>

    <div class="list-container">
        <div class="list-item" ng-repeat="j in listJoueur track by $index">
            <p>{{j.Nom}}</p>
            <p>{{j.Nombre}}</p>
            <input type="number" class="{{j.Nom}}"  />
            <button class="btn btn-primary" ng-click="">valider</button>
        </div>
    </div>
</div>





