@{
    ViewData["Title"] = "Home Page";
}
<style>
    .bordered-box {
        border: 1px solid #ddd;
        padding: 20px;
        width: 300px; /* Adjust the width as needed */
        border-radius: 10px;
        margin-left: 15%;
    }
    
    .launcher {
        float: left;
        margin: auto;
        position: absolute;
    }
    .quit {
        position: absolute;
        margin-left: 10%;
    }
    .restart {
        position: absolute;
        margin-left: 20%;
    }
    .jeu {
        margin-top:15%;
    }
    .nombre {
        color: #173369;
    }
    .time {
        margin-left: 90%;
    }
    .list-container {
        display: flex;
        gap: 2em;
    }
    .temps {
        color: {{ color }};
    }
</style>

<div class="text-center">
    <h1 class="display-4">{{ title }}</h1>
</div>
<div class="col mt-5">
    <div class="mt-3 launcher"><button class="btn btn-success" ng-click="startGame()">Lancer le Jeu</button></div>
    <div class="mt-3 quit"><button class="btn btn-outline-danger" ng-click="endGame()">Quitter le Jeu</button></div>
    <div class="mt-3 restart"><button class="btn btn-outline-warning" ng-click="">Rejouer</button></div>
</div>
<div class="mt-5 text-center time">
    <h5 class="titleTemps">Temps : </h5><h1 class="temps" >{{ timer }}</h1>
</div>

<div class="mt-5 text-center" ng-if="timer == 0 ">
    <h3 class="display-4 alert-warning"><span class="modal-title">{{ timeOut }}</span></h3>
</div>
<div class="container jeu mt-5" ng-if="randomNumber != -1">
    <div class="mt-3 text-center">
        <h5>Nombre a predir : </h5><h3 class="display-4"><span class="modal-title nombre">{{ randomNumber }}</span></h3>
    </div>

    <div class="text-center mt-5 list-group">
        <table class="table">
            <tr>
                <td ng-repeat="chiffre in randomSeven track by $index"><h5>{{ chiffre }}</h5></td>
            </tr>
        </table>
    </div>

    <div class="list-container mt-5">
        <div id="J1" class="bordered-box">
            <p class="mt-3">Joueur 1</p>
            <input type="number" id="number_1" class="mt-3"/>
            <button ng-click="j1Response()" class="btn btn-dark mt-3">valider</button>
        </div>
        <div id="J2" class="bordered-box">
            <p class="mt-3">Joueur 2</p>
            <input type="number" id="number_2" class="mt-3"/>
            <button ng-click="j2Response()" class="btn btn-dark mt-3">valider</button>
        </div>
    </div>

    <div class="mt-5 text-center" id="verify">
        <div>
            <p ng-if=" tour!=-1 ">Preuve de Joueur {{ tour }}</p>
        </div>
        <input type="text" id="combinaison"/>
        <button ng-if=" canVerify == 1 " ng-click="check()" class="btn btn-success">verify</button>
        <button ng-if=" canVerify == -1 " ng-click="check()" class="btn btn-success" disabled>verify</button>
    </div>
    <div class="text-center winner mt-5" ng-if="winner != -1">
        <h1 class="alert-success">The Winner is <span>{{ winner }}</span></h1>
    </div>
   
</div>





